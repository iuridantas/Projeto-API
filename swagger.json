{
  "openapi": "3.0.0",
  "info": {
    "title": "API Times da Serie A de 2022",
    "description": "API para CRUD de Times da Serie A de 2022",
    "termsOfService": "",
    "contact": {
      "email": "uri.dantas@hotmail.com"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "API de teste"
    },
    {
      "url": "https://api-teamsbrazilian2022.herokuapp.com",
      "description": "API de produção"
    }
  ],
  "paths": {
    "/characters": {
      "get": {
        "summary": "Lista de todos os times",
        "description": "Rota responsável por listar todos os times",
        "tags": ["Characters"],
        "responses": {
          "404": {
            "description": "Not Found"
          },
          "200": {
            "description": "ok",
            "content": {
              "appliation/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/teamsbrazilian2022"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/characters/find/{id}": {
      "get": {
        "summary": "Busca um time pelo ID",
        "description": "Rota responsável por buscar um time pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do time para a busca",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/teamsbrazilian2022"
                }
              }
            }
          }
        }
      }
    },
    "/characters/create": {
      "post": {
        "summary": "Cadastrar um time",
        "description": "Rota responsável por cadastrar um time",
        "tags": ["Characters"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/teamsbrazilian2022"
              },
              "examples": {
                "Rickandmortys": {
                  "value": {
                    "name": "América Futebol Clube",
                    "foundation": 1912,
                    "shield": "../../assets/shields/america.png",
                    "mascot": "Coelho",
                    "localization": "Belo Horizonte"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "201": {
            "description": "Created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/teamsbrazilian2022"
                }
              }
            }
          }
        }
      }
    },
    "/characters/update/{id}": {
      "put": {
        "summary": "Editar um time pelo ID",
        "description": "Rota responsável por editar um time pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do time para a busca",
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/teamsbrazilian2022"
              },
              "examples": {
                "Paletas": {
                  "value": {
                    "name": "América Futebol Clube editado",
                    "foundation": 1912,
                    "shield": "../../assets/shields/america.png",
                    "mascot": "Coelho",
                    "localization": "Belo Horizonte"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/teamsbrazilian2022"
                }
              }
            }
          }
        }
      }
    },
    "/characters/delete/{id}": {
      "delete": {
        "summary": "Apagar um time pelo ID",
        "description": "Rota responsável por apagar um time pelo ID",
        "tags": ["Characters"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id do time para deleção",
            "required": true
          }
        ],
        "responses": {
          "400": {
            "description": "Bad Request"
          },
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/characters/search": {
      "get": {
        "summary": "Busca um time pelo nome",
        "description": "Rota responsável por buscar um time pelo nome",
        "tags": ["Characters"],
        "parameters": [
          {
            "in": "query",
            "name": "name",
            "type": "string",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/teamsbrazilian2022"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "teamsbrazilian2022": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "foundation": {
            "type": "number"
          },
          "shield": {
            "type": "string"
          },
          "mascot": {
            "type": "string"
          },
          "localization": {
            "type": "string"
          }
        }
      }
    }
  }
}
